!!!
%html
  %head
    %title ChatSpace
  %body
    .header
    .content
      .side-menu
        .side-header
          = render '/shared/side-header'
        .side-content
          = render '/shared/side-content'
      .main-menu
        .main-header
          .group
            %p.group__name
              = @group.name
            %p.group__member
              = "Member : #{@group.show_members}"
          .main-header__btn-edit
            = link_to 'Edit', edit_group_path(@group), class: 'link__edit'
        .main-content
          = render partial: '/shared/main-content', collection: @messages, as: 'message'
        .main-input
          = form_for [@group, @message], html: {class: 'main-form'} do |f|
            .main-form__box
              = f.text_field :body, class: 'main-form__text', placeholder: 'type a message'
              = f.label :image, class: 'main-form__image-button' do
                %i.fa.fa-image
                  = f.file_field :image, class: 'main-form__file'
            = f.submit 'Send', class: 'main-form__submit-button'
